---
type Props = any;
const props = Astro.props;
---

<div class="pb-4 flex flex-col gap-3">
  <div class="w-full flex gap-3 items-stretch">
    <div class="hidden md:block w-1/3 h-full">
      <div
        style={`background-image: url(${props.img});`}
        class="bgimg h-0 relative pb-[120%] w-full bg-neutral-200 rounded-md flex-shrink-0"
      >
      </div>
    </div>
    <div class="w-full md:w-2/3 flex">
      <div
        style={`background: ${props.color};`}
        class="rounded-md w-full p-10"
      >
        <div class="text-responsive-small">
          <slot />
        </div>
      </div>
    </div>
  </div>
  <h1 class="text-5xl">
    {props.longtitle}
  </h1>
</div>
