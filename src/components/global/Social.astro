---
import Button from "../Button.astro";
import TrackedButton from "../TrackedButton.astro";
---

<div class="flex flex-col gap-6">
  <div>
    <p class="text-dimmed">Find me on</p>
    <div class="flex items-baseline gap-1">
      <TrackedButton
        eventName="outgoing-social-link"
        text="LinkedIn"
        href="https://www.linkedin.com/in/baris-inandi"
      />
      /
      <TrackedButton
        eventName="outgoing-social-link"
        text="GitHub"
        href="https://www.github.com/baris-inandi"
      />
      /
      <TrackedButton
        eventName="outgoing-social-link"
        text="Instagram"
        href="https://www.instagram.com/barisinandi"
      />
    </div>
  </div>
  <div>
    <p class="text-dimmed">Click to view my</p>
    <Button text="Resume" href="/resume.pdf" />
  </div>
</div>
